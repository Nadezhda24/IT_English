    <!-- Вынес html-шаблоны текста в файлы ресурсов: светлая и тёмные темы соответственно-->
    <!-- Вместо %s вставляется текст карточки-->
    <!-- <![CDATA[]] нужен для того, чтобы при использовании строкового ресурса в коде программы он
    интерпретировался как корректный код html
    P.S. Здесь также нужно экранировать апострофы, иначе файл ресурсов не компилируется :)
    -->

    <string name="referenceItemModeNightNoHtmlTemplate">
    <![CDATA[<html>
        <head>
            <style>p { text-indent: 25px; }</style>
        </head>
        <body style=\'text-align: justify;\'>
            %s
        </body>
    </html>]]>
    </string>

    <string name="referenceItemModeNightYesHtmlTemplate">
    <![CDATA[<html>
        <head>
            <style>p { text-indent: 25px; }</style>
        </head>
        <body style=\'text-align: justify;\'>
            <font color="white"/>
            %s
        </body>
    </html>]]>
</string>
